services:
  ecomm.api.customers:
    build:
      context: C:\DotnetCoreProjects\EComm
      dockerfile: EComm.Api.Customers/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: ecommapicustomers
    ports:
    - published: 6002
      target: 80
  ecomm.api.orders:
    build:
      context: C:\DotnetCoreProjects\EComm
      dockerfile: EComm.Api.Orders/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: ecommapiorders
    ports:
    - published: 6003
      target: 80
  ecomm.api.products:
    build:
      context: C:\DotnetCoreProjects\EComm
      dockerfile: EComm.Api.Products/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
    image: ecommapiproducts
    ports:
    - published: 6001
      target: 80
  ecomm.api.search:
    build:
      context: C:\DotnetCoreProjects\EComm
      dockerfile: Ecomm.Api.Search/Dockerfile
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      Services__Customers: http://localhost:6002
      Services__Orders: http://localhost:6003
      Services__Products: http://localhost:6001
    image: ecommapisearch
    ports:
    - published: 6004
      target: 80
version: '3.4'